<Page
    x:Class="Calculator_11_30_21.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator_11_30_21"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    BorderBrush="Beige"
    BorderThickness="0"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="326" Height="509">

    <Grid Margin="1" BorderBrush="CornflowerBlue" BorderThickness="1">
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width = "Auto" />
            <ColumnDefinition Width = "Auto" />
        </Grid.ColumnDefinitions>
        <!--<TextBox x:Name="showOutput" FontSize="20"  Width="auto" Height="34"  Grid.Column = "1" Margin = "1"--> 
         <!--PlaceholderText="Type here..." Text = "{Binding Name, Mode = TwoWay}"/>-->


        <StackPanel Grid.Row = "1" Grid.Column = "1" Padding="2" Margin="0" Orientation="Vertical">
            <TextBox x:ConnectionId='22'  BorderBrush="SaddleBrown" BorderThickness="0" x:Name="numberInput" FontSize="20"  Width="Auto" Height="64"   
         PlaceholderText="Type here..." />
            <TextBlock x:ConnectionId='23' Text="0"  TextAlignment="Right" x:Name="result" FontSize="20"  Width="Auto" Height="34"   Margin = "0" 
           Foreground="CornflowerBlue"/>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center" Grid.Row = "2" Grid.Column = "1" Padding="0" Margin="0" Orientation="Horizontal">
            <Button x:ConnectionId='18' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b1" 
             Content="1"                 />
            <Button x:ConnectionId='19' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b2" 
            Content="2"                 />

            <Button x:ConnectionId='20' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b3" 
              Content="3"                 />

            <Button x:ConnectionId='21' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bp" 
              Content="+"  Foreground="YellowGreen"                 />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row = "3" Grid.Column = "1" Padding="0" Margin="0"  Orientation="Horizontal">
            <Button x:ConnectionId='14' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b4" 
              Content="4"                 />
            <Button x:ConnectionId='15' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b5" 
            Content="5"                 />

            <Button x:ConnectionId='16' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b6" 
             Content="6"                 />

            <Button x:ConnectionId='17' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bs" 
            Content="-" Foreground="YellowGreen"                 />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row = "4" Grid.Column = "1" Padding="0" Margin="0"  Orientation="Horizontal">
            <Button x:ConnectionId='10' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b7" 
             Content="7"                 />
            <Button x:ConnectionId='11' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b8" 
             Content="8"                 />
            <Button x:ConnectionId='12' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "b9" 
              Content="9"                 />
            <Button x:ConnectionId='13' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bml" 
             Content="x" Foreground="YellowGreen"                  />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row = "5" Grid.Column = "1" Padding="0" Margin="0"  Orientation="Horizontal">
            <Button x:ConnectionId='6' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bdot" 
             Content="."                    />
            <Button x:ConnectionId='7' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bee" 
             Content="0"                  />


            <Button x:ConnectionId='8' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "be" 
              Content="="                 />

            <Button x:ConnectionId='9' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bd" 
            Content="/" Foreground="YellowGreen"                 />
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Grid.Row = "6" Grid.Column = "1" Padding="0" Margin="0"  Orientation="Horizontal">


            <Button x:ConnectionId='2' BorderBrush="Black" FontSize="34" Width="80" Height="80" Name = "bf" 
              Content=" " />


            <Button x:ConnectionId='3' BorderBrush="Black" FontSize="24" Width="80" Height="80" Name = "bClear" 
             Content="C" Foreground="PaleVioletRed"                     />

            <Button x:ConnectionId='4' BorderBrush="Black" FontSize="24" Width="80" Height="80" Name = "bac" 
             Content="AC" Foreground="Red"                   />
            <Button x:ConnectionId='5' BorderBrush="Black" FontSize="24" Width="80" Height="80" Name = "bf2" 
            Content=" " Foreground="YellowGreen"/>
        </StackPanel>

    </Grid>
</Page>

